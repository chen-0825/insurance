<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.java.mapper.SurveyMapper">

    <insert id="add">
        insert into survey(number,time,site,phone,status,name,ds_status,money,wounded,photo)
        values(#{number},#{time},#{site},#{phone},#{status},#{name},#{dsStatus},#{money},#{wounded},#{photo})
    </insert>

   <delete id="delete" >
       delete from survey where id in
       <foreach collection="array" open="(" close=")" item="id" separator=",">
           #{id}
       </foreach>
   </delete>

    <update id="update">
        update survey
        <set>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="dsStatus != null and dsStatus != ''">
                ds_status = #{dsStatus}
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="findAll" resultType="Survey">
        select * from survey
    </select>

</mapper>